//예제 12-3
#define _CRT_SECURE_NO_WARNINGS

#include <stdio.h>
#include <stdlib.h>

int main(void)
{
	FILE* fp;
	int n = 4000;

	if ((fp = fopen("basic.txt", "wb")) == NULL)
	{
		printf("파일이 열리지 않습니다.\n");
		exit(1);
	}

	fwrite(&n, sizeof(int), 1, fp);

	fclose(fp);

	return 0;
}

